<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
  
    <title>Create Workout</title>
</head>
<body>
    <div class="container mt-4">
        <h2>Create Workout</h2>

        <!-- Create Workout Form -->
        <form action="/api/workouts/insertWorkout" method="POST">
            <div class="form-group">
                <label for="workoutName">Workout Name</label>
                <input type="text" class="form-control" id="workoutName" name="workoutName" required>
            </div>

            <div class="form-group">
                <label for="workoutDesc">Workout Description</label>
                <textarea class="form-control" id="workoutDesc" name="workoutDesc" rows="3"></textarea>
            </div>

            <!-- Add other workout fields as needed -->

            <div class="form-group">
                <label for="visibility">Visibility</label>
                <select class="form-control" id="visibility" name="Visibility" required>
                    <option value="true">Public</option>
                    <option value="false">Private</option>
                </select>
            </div>

            <!-- Add an input for the workout image if needed -->

            <!-- Hidden input for client_id -->
            <input type="hidden" id="client_id" name="client_id" >

            <button type="submit" class="btn btn-primary">Create Workout</button>
        </form>
    </div>

    <script>
        // Retrieve client ID from local storage
        const clientId = localStorage.getItem('userId');
    
        // Check if clientId is available
        if (clientId) {
            // Set the clientId as the value of the input field
            document.getElementById('client_id').value = clientId;
        } else {
            // Client ID is not found in local storage
            console.error('Client ID not found in local storage. Please log in.');
        }
    </script>

</body>
</html>
